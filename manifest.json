{
    "name": "Shaarli",
    "id": "shaarli",
    "description": {
        "en": "Shaarli The personal, minimalist, super-fast, no-database delicious clone.",
        "fr": "Shaarli The personal, minimalist, super-fast, no-database delicious clone."
    },
    "license": "GPL-3",
    "developer": {
        "name": "genma",
        "email": "genma@free.fr",
        "url": "http://genma.free.fr
    },
    "url": "https://github.com/shaarli/Shaarli/",
    "multi_instance": "true",
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "ask": {
                    "en": "Choose a domain for shaarli"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "ask": {
                    "en": "Choose a path for shaarli"
                },
                "example": "/shaarli",
                "default": "/shaarli"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose the shaarli administrator (must be an existing YunoHost user)",
                    "fr": "Administrateur du site (doit Ãªtre un utilisateur YunoHost existant)"
                },
                "example": "homer"
            }
        ]
    }
}